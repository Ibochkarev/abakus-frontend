mixin m_title(title, tag)
  if tag === h1
    h1.l-section__title.a-font_h2.decor__title!=title
      span.decor__title-border.b_top
      span.decor__title-border.b_top-right
      span.decor__title-border.b_bottom
      span.decor__title-border.b_bottom-right
  else
    h2.l-section__title.a-font_h2.decor__title!=title
      span.decor__title-border.b_top
      span.decor__title-border.b_top-right
      span.decor__title-border.b_bottom
      span.decor__title-border.b_bottom-right
